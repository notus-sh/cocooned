  "dependencies": {
    "@cocooned/tests": "link:./npm/__tests__",
    "@notus.sh/cocooned": "link:./npm"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "eslint": "^9.38.0",
    "neostandard": "^0.12.2",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jest-dom": "^5.1.0",
    "givens": "^1.3.9",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jquery": "^3.0.0",
    "rollup": "^4.22.4"
  }
}
