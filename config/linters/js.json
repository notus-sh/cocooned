{
  "extends": "standard",
  "env": {
    "browser": true,
    "jquery": true
  },
  "parserOptions": { "ecmaVersion": 2018 },
  "overrides": [
    {
      "files": ["__tests__/{unit,integration}/**/*.js"],
      "plugins": ["jest", "jest-dom"],
      "extends": ["plugin:jest/recommended", "plugin:jest-dom/recommended"]
    }
  ]
}
